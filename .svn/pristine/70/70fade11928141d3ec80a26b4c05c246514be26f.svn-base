.wrapper{
    width: 974px;
    height: 100%;
    margin: 0 auto;
}

.banner{
    width: 100%;
    height: 292px;
    background-image: url("../images/banner.png");
}

.search{
    float: right;
    margin-top: 15px;
    margin-right: 24px;
    font-size: 12px;
}

.search .cn{
    color: #730d06;
}

.search .en{
    color: #727272;
}

.search a:hover{
    color: #730d06;
}

.search #search{
    width: 156px;
    height: 18px;
    background-color: transparent;
    border: 1px solid #b5b5b5;
}

.search #submit{
    width: 30px;
    height: 20px;
    background: linear-gradient(#a70329, #73001b);
    font-size: 12px;
    font-family: "Verdana";
    color: #ffffff;
    border: none;
    border-radius: 5px;
    outline: none;
    cursor: pointer;
}

.company-info{
    clear: both;
    float: right;
    width: 338px;
    margin-top: 32px;
    margin-right: 18px;
}

.company-info p:first-child{
    font-size: 24px;
}

.company-info p:nth-child(2){
    font-size: 12px;
    font-family: "Verdana";
}

.company-info p:nth-child(3){
    margin-top: 28px;
    font-size: 12px;
    color: #727272;
}

button{
    width: 95px;
    height: 25px;
    font-size: 12px;
    color: #ffffff;
    background: linear-gradient(#a70329, #73001b);
    border: none;
    border-radius: 5px;
    outline: none;
    cursor: pointer;
}

.company-info button{
    margin-top: 10px;
}

.nav{
    background: linear-gradient(#a70329, #73001b);
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
}

.nav ul{
    margin-left: 42px;
}

.nav ul li{
    display: inline-block;
    padding: 0px 12px;
    position: relative;
}

.nav ul li::after{
    content: '';
    display: inline-block;
    width: 1px;
    height: 10px;
    background-color: #ffffff;
    position: absolute;
    top: 8px;
    right: 0;
}

.nav ul li a{
    display: block;
    line-height: 10px;
    font-size: 12px;
    color: #ffffff;
    padding: 8px 20px 6px;
    text-align: center;
    border-radius: 5px;
    transition: all 0.5s;
}

.nav ul li:first-child a{
    background: linear-gradient(#646464, #2d2d2d);
}

.nav ul li a:hover{
    background: linear-gradient(#646464, #2d2d2d);
}

.content{
    padding-top: 35px;
}

.content .left{
    float: left;
    width: 250px;
    margin-left: 22px;
}

.box .title{
    height: 29px;
    line-height: 29px;
    font-size: 12px;
    font-weight: bold;
    background-color: #f0f0f0;
    position: relative;
    padding-left: 30px;
}

.box .title::before{
    content: '';
    display: inline-block;
    width: 21px;
    height: 29px;
    background-image: url("../images/arrow.png");
    position: absolute;
    top: 0;
    left: 0;
}

.news-list{
    padding-top: 2px;
}

.news-list ul li{
    padding-top: 10px;
    padding-bottom: 8px;
    border-bottom: 1px dashed #cccccc;
}

.news-list ul li p{
    font-size: 12px;
}

.news-list ul li p:first-child{
    font-weight: bold;
    position: relative;
    text-indent: 14px;
}

.news-list ul li p:nth-child(2){
    margin-top: 5px;
}

.news-list ul li p:first-child::before{
    content: '';
    display: inline-block;
    width: 2px;
    height: 2px;
    background-color: #333333;
    position: absolute;
    top: 6px;
    left: 7px;
}

.left button{
    margin-top: 22px;
}

.content .center{
    float: left;
    width: 376px;
    margin-left: 28px;
}

.product-img{
    text-align: center;
    background-color: #f5f5f5;
    margin-top: 5px;
    padding: 14px 0;
    border: 1px solid #e9e6e6;
}